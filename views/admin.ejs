<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
  </head>
  <body>
    <nav>
      <div class="navlinks">
        <a href="/home">Heim</a>
        <a href="/logout">Logg ut</a>
      </div>
    </nav>
    <h2>Admin site</h2>
    <h3>Users</h3>
    <table>
      <tr>
        <th>Brukernavn</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      <% users.forEach((user) => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <form action="/admin" method="post">
            <input type="hidden" name="username" value="<%= user.username %>">
            <input type="hidden" name="email" value="<%= user.email %>">
            <button type="submit">Ban</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/register">New User</a> <br>
    <a href="/">Back to Category Selection</a> <br>
  </body>
</html>

