<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Admin</title>
  </head>
  <body>
    <nav class="topnav">
      <a href="/home" class="navlinks">Heim </a>
      <a class="navlinks"><%= user %></a>
      <a href="/logout" class="navlinks">Logg ut </a> 
      <a href="/admin" class="navlinks active">Admin </a>
    </nav>
    <h2>Admin site</h2>
    <h3>Users</h3>
    <table>
      <tr>
        <th>Brukernavn</th>
        <th>Email</th>
        <th>Id</th>
        <th>Action</th>
      </tr>
      <% users.forEach((user) => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.userId %></td>
        <td><a href="/admin/edit/<%=user.userId%>">Edit</a></td>
        <td>
          <form action="/admin" method="post">
            <input type="hidden" name="username" value="<%= user.username %>">
            <input type="hidden" name="email" value="<%= user.email %>">
            <button type="submit">Ban</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/register">New User</a> <br>
    <a href="/home">Back to Category Selection</a> <br>
  </body>
</html>

